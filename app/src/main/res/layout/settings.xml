<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">
    <Switch
        android:id="@+id/musicSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textOff="Off"
        android:textOn="On"
        android:switchMinWidth="70dp"
        android:background="@color/red_pink"
        android:text="@string/musicSwitch"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        />
    <Switch
        android:id="@+id/publishScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textOff="Off"
        android:textOn="On"
        android:switchMinWidth="70dp"
        android:background="@color/red_pink"
        android:text="@string/publishScoresSwitch"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        />
    <ImageView
        android:id="@+id/blockCover"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/gift_box"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red_pink"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="@string/chooseBlockCover"
        android:layout_marginStart="20dp"/>
    <Spinner
        android:id="@+id/blockCoverChoice"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/red_pink"/>
</LinearLayout>