<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">
        <TextView
            android:id="@+id/howToPlayTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/howToPlayTitle"
            android:gravity="center"
            android:textColor="@color/red_pink"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/howToPlayExplanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/howToPlayTitle"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/red_pink"
            android:textSize="16dp"
            android:justificationMode="inter_word"
            android:layout_marginTop="20dp"
            android:text="@string/howToPlayExplanation"
            android:gravity="left"/>
        <TextView
            android:id="@+id/howToleadershipBoardRankingsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/howToPlayExplanation"
            android:text="@string/howToLeadershipBoardRankingsTitle"
            android:gravity="center"
            android:textColor="@color/red_pink"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/howToleadershipBoardRankingsTitleExplanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/howToleadershipBoardRankingsTitle"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/red_pink"
            android:textSize="16dp"
            android:justificationMode="inter_word"
            android:layout_marginTop="20dp"
            android:text="@string/howToLeadershipBoardRankingsTitleExplanation"
            android:gravity="left"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>