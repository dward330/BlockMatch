<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/leadershipBoardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/joinCompetition"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/leadershipBoardTitle"
        android:textStyle="bold"
        android:textColor="@color/red_pink"
        android:textSize="20dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/joinCompetition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/leadershipBoardTitle"
        android:layout_marginTop="30dp"
        style="@style/loginSignUpButtons"
        android:text="@string/joinCompetitionButton"
        android:textSize="15dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/leadershipSection_Recylcer_View"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/joinCompetition"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>